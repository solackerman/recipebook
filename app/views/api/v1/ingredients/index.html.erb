<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Grocery item</th>
      <th>Step</th>
      <th>Unit</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.grocery_item_id %></td>
        <td><%= ingredient.step_id %></td>
        <td><%= ingredient.unit %></td>
        <td><%= ingredient.qty %></td>
        <td><%= link_to 'Show', api_v1_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Edit', edit_api_v1_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', api_v1_ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_api_v1_ingredient_path %>
