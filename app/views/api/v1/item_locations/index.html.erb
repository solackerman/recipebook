<p id="notice"><%= notice %></p>

<h1>Item Locations</h1>

<table>
  <thead>
    <tr>
      <th>Grocery item</th>
      <th>Store</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_locations.each do |item_location| %>
      <tr>
        <td><%= item_location.grocery_item_id %></td>
        <td><%= item_location.store %></td>
        <td><%= item_location.section %></td>
        <td><%= link_to 'Show', api_v1_item_location_path(item_location) %></td>
        <td><%= link_to 'Edit', edit_api_v1_item_location_path(item_location) %></td>
        <td><%= link_to 'Destroy', api_v1_item_location_path(item_location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item Location', new_api_v1_item_location_path %>
