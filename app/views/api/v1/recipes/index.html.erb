<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Num servings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.num_servings %></td>
        <td><%= link_to 'Show', api_v1_recipe_path(recipe) %></td>
        <td><%= link_to 'Edit', edit_api_v1_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', api_v1_recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_api_v1_recipe_path %>
